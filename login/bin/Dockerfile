FROM alpine

COPY ./login_linux /tmp/app/

WORKDIR /tmp/app

ENV SERVICE_TAGS=braid,login
ENV SERVICE_14101_NAME=login
ENV GOTRACEBACK=crash

ENV SERVICE_CHECK_HTTP=/health
ENV SERVICE_CHECK_INTERVAL=15s
ENV SERVICE_CHECK_TIMEOUT=2s
ENV SERVICE_CHECK_PORT=14102

EXPOSE 14101

ENTRYPOINT ./login_linux $0 $@
