FROM alpine

COPY ./mail_linux /home/app/

WORKDIR /home/app

ENV SERVICE_TAGS=braid,mail
ENV SERVICE_14301_NAME=mail
ENV GOTRACEBACK=crash


ENV SERVICE_CHECK_HTTP=/health
ENV SERVICE_CHECK_INTERVAL=15s
ENV SERVICE_CHECK_TIMEOUT=2s
ENV SERVICE_CHECK_PORT=14302


EXPOSE 14301

ENTRYPOINT ./mail_linux $0 $@
